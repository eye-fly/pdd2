broker.id={{ groups['kafka'].index(inventory_hostname) }}

listeners=PLAINTEXT://0.0.0.0:9092
advertised.listeners=PLAINTEXT://{{ hostvars[inventory_hostname].ansible_host }}:9092


log.dirs=/tmp/kafka-logs
zookeeper.connect={{ hostvars[groups['zookeeper'][0]].ansible_host }}:2181

offsets.topic.replication.factor=1
num.network.threads=2
num.io.threads=4
socket.send.buffer.bytes=102400
socket.receive.buffer.bytes=102400
socket.request.max.bytes=104857600

log.retention.hours=8
log.segment.bytes=134217728
log.retention.check.interval.ms=300000
num.partitions=1
